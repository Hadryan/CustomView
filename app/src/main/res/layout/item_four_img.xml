<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:background="@drawable/bg_shadow2"
    android:orientation="vertical">
    <!--android:background="@color/app_white_fff"-->

    <Button
        android:id="@+id/btn"
        style="@style/Layout_Wrap_Wrap"
        android:layout_width="50dp"
        android:layout_gravity="right"
        android:layout_marginEnd="@dimen/dp_20"
        android:text="pop"
        android:textSize="@dimen/sp_10"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="原始文本"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        tools:text="askjdfhjksjnfkdnfms,d"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="可展开收缩文本"/>

    <com.nkw.customview.view.VyTextView
        android:id="@+id/tv_expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#22aaaaaa"
        app:maxShowLines="4"
        tools:text="akjsdnsfkjjndkndf"/>

    <View
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"/>

    <com.nkw.customview.view.fourGridView.ImageViewGroup
        android:id="@+id/custom_grid_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"/>

    <com.nkw.customview.view.NineGridImage.NineGridImageLayout
        android:id="@+id/nine_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>