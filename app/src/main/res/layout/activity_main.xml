<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".activity.MainActivity">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TabLayoutVY"
            android:textStyle="bold"/>

        <com.nkw.customview.view.TabLayoutVY
            android:id="@+id/tablayoutVy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/TabOne"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TabOne"/>

            <TextView
                android:id="@+id/TabTwo"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TabTwo"/>

            <TextView
                android:id="@+id/TabThree"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TabThree"/>

            <TextView
                android:id="@+id/TabFour"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TabFour"/>
        </com.nkw.customview.view.TabLayoutVY>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="RefreshLikeIOSView"
            android:textStyle="bold"/>

        <com.nkw.customview.view.RefreshLikeIOSView
            android:id="@+id/RefreshLikeIOSView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="RefreshLikeIOSView"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_four_grid_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FourGridView And FitPopWindow"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="VYloading"
            android:textStyle="bold"/>

        <com.nkw.customview.view.VyLoading
            android:id="@+id/vy_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btn_webView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="webView"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="DragLayout"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_dragLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DragLayout"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="弹幕"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_barrage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="barrage"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="水波紋"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_radar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="水波紋"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="电路图"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_dian_lu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="电路图"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="自定义layoutManager"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_layoutManager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="自定义layoutManager"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="自定义相机"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_custom_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="自定义相机"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="自定义Drawable"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/iv_custom_drawable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="50dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>